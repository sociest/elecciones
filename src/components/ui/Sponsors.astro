---
import { buildPath } from '../../lib/utils/paths';

const sponsors = [
  { name: 'SOCIEST', logo: buildPath('/logos/sociest.png') },
  { name: 'Fundaci√≥n ARU', logo: buildPath('/logos/aru_white.png') },
  {
    name: 'LABTECNOSOCIAL',
    logo: buildPath('/logos/labtecnosocial_white.png'),
  },
];
---

<section class="mt-8">
  <div class="space-y-4">
    <p class="text-hunter/40 text-[10px] uppercase tracking-[0.3em] font-bold">
      Desarrollado por:
    </p>
    <div
      class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 items-center"
    >
      {
        sponsors.map((sponsor) => (
          <div class="flex flex-col items-center group cursor-pointer">
            <div class="w-full h-20 flex items-center justify-center p-4 bg-white/5 backdrop-blur-md border border-white/5 rounded-2xl group-hover:bg-white/10 group-hover:border-white/10 transition-all duration-500 shadow-xl shadow-black/10 relative overflow-hidden">
              {/* Subtle highlight effect on hover */}
              <div class="absolute inset-0 bg-linear-to-br from-white/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
              <img
                src={sponsor.logo}
                alt={`Logo de ${sponsor.name}`}
                class="max-h-full max-w-full object-contain filter grayscale opacity-40 group-hover:grayscale-0 group-hover:opacity-100 transition-all duration-500 relative z-10"
                loading="lazy"
              />
            </div>
            <span class="mt-3 text-[10px] font-bold text-hunter/40 uppercase tracking-widest group-hover:text-hunter/80 transition-colors duration-500">
              {sponsor.name}
            </span>
          </div>
        ))
      }
    </div>
  </div>
</section>
