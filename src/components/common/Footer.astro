---
import {
    Globe,
    Github,
    Users,
    Award,
    ExternalLink,
    ShieldCheck,
    Heart,
    Landmark,
} from "lucide-react";
import { buildPath } from "../../lib/utils/paths";
import Sponsors from "../ui/Sponsors.astro";

const year = new Date().getFullYear();
---

<footer
    class="bg-primary-green text-hunter pt-24 pb-10 px-6 relative overflow-hidden w-full"
>
    <div
        class="absolute inset-0 opacity-[0.02] pointer-events-none bg-[url('https://grainy-gradients.vercel.app/noise.svg')]"
    >
    </div>
    <div
        class="absolute top-0 right-0 w-125 h-125 bg-hunter/5 rounded-full blur-[120px] -translate-y-1/2 translate-x-1/4"
    >
    </div>

    <div class="max-w-7xl mx-auto relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 pb-20 items-start">
            <div class="lg:col-span-12 xl:col-span-5 space-y-8">
                <div class="flex items-center gap-4">
                    <div
                        class="w-14 h-14 bg-hunter rounded-2xl flex items-center justify-center text-primary-green shadow-2xl rotate-3"
                    >
                        <Globe size={28} strokeWidth={2.5} />
                    </div>
                    <div>
                        <h2
                            class="text-4xl font-black tracking-tighter leading-none uppercase"
                        >
                            Monitor
                        </h2>
                        <p
                            class="text-[10px] font-black tracking-[0.5em] opacity-40"
                        >
                            ELECCIONES 2026
                        </p>
                    </div>
                </div>
                <p
                    class="text-xl font-medium text-hunter/50 leading-relaxed text-pretty max-w-sm"
                >
                    Fiscalización ciudadana impulsada por datos para el
                    fortalecimiento de la democracia en <span
                        class="text-hunter">Bolivia</span
                    >.
                </p>
            </div>

            <div class="lg:col-span-12 xl:col-span-7">
                <Sponsors />
            </div>
        </div>

        <div
            class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-12 gap-12 py-16 border-t border-white/5"
        >
            <div class="lg:col-span-3 space-y-8">
                <h4
                    class="text-[10px] font-black uppercase tracking-[0.4em] opacity-20"
                >
                    Explorar
                </h4>
                <ul class="space-y-4">
                    <li>
                        <a
                            href={buildPath("/search")}
                            class="text-xs font-bold opacity-40 hover:opacity-100 hover:translate-x-1 transition-all block"
                            >Explorador Electoral</a
                        >
                    </li>
                    <li>
                        <a
                            href={buildPath("/mapa")}
                            class="text-xs font-bold opacity-40 hover:opacity-100 hover:translate-x-1 transition-all block"
                            >Mapa de Entidades</a
                        >
                    </li>
                    <li>
                        <a
                            href="#"
                            class="text-xs font-bold opacity-40 hover:opacity-100 hover:translate-x-1 transition-all block"
                            >Metodología</a
                        >
                    </li>
                </ul>
            </div>

            <div class="lg:col-span-3 space-y-8">
                <h4
                    class="text-[10px] font-black uppercase tracking-[0.4em] opacity-20"
                >
                    Institucional
                </h4>
                <ul class="space-y-4">
                    <li>
                        <a
                            href={buildPath("/data-privacy")}
                            class="text-xs font-bold opacity-40 hover:opacity-100 hover:translate-x-1 transition-all block"
                            >Privacidad de Datos</a
                        >
                    </li>
                    <li>
                        <a
                            href={buildPath("/terms-of-use")}
                            class="text-xs font-bold opacity-40 hover:opacity-100 hover:translate-x-1 transition-all block"
                            >Términos de Uso</a
                        >
                    </li>
                    <li>
                        <a
                            href={buildPath("#")}
                            class="text-xs font-bold opacity-40 hover:opacity-100 hover:translate-x-1 transition-all block"
                            >Preguntas Frecuentes</a
                        >
                    </li>
                </ul>
            </div>

            <div class="col-span-2 lg:col-span-4 lg:col-start-9 space-y-8">
                <div
                    class="p-8 bg-soft-green rounded-[2.5rem] border border-white/5 relative overflow-hidden group"
                >
                    <Users
                        className="absolute -right-6 -bottom-6 w-32 h-32 opacity-5 group-hover:scale-110 transition-transform duration-700"
                    />
                    <div class="relative z-10">
                        <h4
                            class="text-xl font-black tracking-tight mb-2 text-hunter"
                        >
                            Nuestro Equipo
                        </h4>
                        <p
                            class="text-xs font-medium text-hunter/40 mb-8 leading-relaxed"
                        >
                            Conoce a los estudiantes, profesionales y
                            fundaciones que hacen posible este proyecto.
                        </p>
                        <a
                            href={buildPath("/contributors")}
                            class="flex items-center justify-between px-6 py-4 bg-hunter text-primary-green rounded-2xl font-black text-[10px] uppercase tracking-widest hover:scale-[1.02] active:scale-95 transition-all shadow-xl"
                        >
                            Ver Colaboradores
                            <ExternalLink size={14} />
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div
            class="pt-12 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-8"
        >
            <div class="flex flex-col md:flex-row items-center gap-6">
                <p
                    class="text-[10px] font-black opacity-20 uppercase tracking-[0.5em]"
                >
                    © {year} Monitor Electoral | La Paz, Bolivia
                </p>
                <div class="hidden md:block w-px h-4 bg-white/10"></div>
                <div class="flex items-center gap-2">
                    <ShieldCheck
                        size={14}
                        className="opacity-20 text-emerald-500"
                    />
                    <span
                        class="text-[9px] font-black uppercase tracking-widest opacity-20"
                        >Información Auditada</span
                    >
                </div>
            </div>

            <div class="flex items-center gap-8">
                <div
                    class="flex items-center gap-1 text-[9px] font-black uppercase tracking-widest opacity-10"
                >
                    Hecho con <Heart
                        size={10}
                        fill="currentColor"
                        className="text-red-500/50"
                    /> por Hzu
                </div>
            </div>
        </div>
    </div>
</footer>

<style>
    footer {
        text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
    }
    a {
        text-decoration: none;
    }
</style>
